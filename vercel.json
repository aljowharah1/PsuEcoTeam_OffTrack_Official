{
  "version": 2,
  "builds": [
    { "src": "app/**", "use": "@vercel/static" },
    { "src": "api/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/app/(.*)", "dest": "/app/$1" },
    { "src": "/app", "dest": "/app/index.html" }
  ]
}
